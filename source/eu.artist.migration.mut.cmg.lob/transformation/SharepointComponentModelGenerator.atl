module SharepointComponentModelGenerator;
create OUT: UML2 from IN: UML2, GenericProfile: profile, MicrosoftSharePointProfile: profile;
--uses "lib::UMLLib";
uses "transformations::ComponentModelGenerator";
uses SharepointComponentModel;

